@page "/"
@using loyalty_sfotware.Services
@layout loyalty_sfotware.Components.Layout.EmptyLayout
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<div class="min-h-screen flex items-center justify-center bg-gray-50 p-6">
    <div class="w-full max-w-md bg-white rounded-lg shadow p-6">
        <h2 class="text-center text-2xl font-semibold mb-2">Loyalty Admin</h2>
        <p class="text-center text-sm text-gray-500 mb-4">Sign in to your account</p>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="mb-4 text-sm text-red-600">@errorMessage</div>
        }

        <div class="space-y-3">
            <input class="w-full px-3 py-2 border rounded" placeholder="Username" @bind="username" />
            <input type="password" class="w-full px-3 py-2 border rounded" placeholder="Password" @bind="password" />
            <button class="w-full py-2 bg-green-700 text-white rounded font-semibold"
                @onclick="HandleLogin">@LoginButtonText</button>
            <p class="text-center text-xs text-gray-400">Forgot password? Contact your admin.</p>
        </div>
    </div>
</div>

@code {
    private string username = string.Empty;
    private string password = string.Empty;
    private string errorMessage = string.Empty;
    private bool isLoading = false;
    private string LoginButtonText => isLoading ? "Signing in..." : "Sign In";

    private async Task HandleLogin()
    {
        errorMessage = string.Empty;
        isLoading = true;

        try
        {
            var result = await AuthService.LoginAsync(username, password);
            if (result != null && result.Success && !string.IsNullOrEmpty(result.AccessToken))
            {
                await JSRuntime.InvokeVoidAsync("localStorage.setItem", "jwtToken", result.AccessToken);
                if (!string.IsNullOrEmpty(result.RefreshToken))
                {
                    await JSRuntime.InvokeVoidAsync("localStorage.setItem", "refreshToken", result.RefreshToken);
                }
                Navigation.NavigateTo("/appointments", forceLoad: true);
            }
            else
            {
                errorMessage = result?.Message ?? "Invalid username or password";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Login failed: " + ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }
}