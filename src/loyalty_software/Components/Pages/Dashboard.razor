@page "/dashboard"
@rendermode InteractiveServer

<PageTitle>Dashboard - Loyalty Admin</PageTitle>

<div class="space-y-6">
  <div>
    <div class="flex items-center gap-3">
      <svg class="w-7 h-7 text-gray-700" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7h18M3 12h18M3 17h18"/></svg>
      <div>
        <h1 class="text-2xl font-semibold">Dashboard</h1>
        <p class="text-sm text-gray-500">Overview of loyalty program metrics and activities</p>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
    <div class="p-4 bg-white rounded shadow border">
      <div class="text-xs text-gray-500">Total Members</div>
      <div class="text-2xl font-bold">1,234</div>
      <div class="text-xs text-gray-400">+12% from last month</div>
    </div>
    <div class="p-4 bg-white rounded shadow border">
      <div class="text-xs text-gray-500">Active Campaigns</div>
      <div class="text-2xl font-bold">8</div>
      <div class="text-xs text-gray-400">3 ending this week</div>
    </div>
    <div class="p-4 bg-white rounded shadow border">
      <div class="text-xs text-gray-500">Points Redeemed</div>
      <div class="text-2xl font-bold">45.2K</div>
      <div class="text-xs text-gray-400">This month</div>
    </div>
    <div class="p-4 bg-white rounded shadow border">
      <div class="text-xs text-gray-500">Revenue Impact</div>
      <div class="text-2xl font-bold">$23.4K</div>
      <div class="text-xs text-gray-400">+8% growth</div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
    <div class="lg:col-span-2 bg-white rounded shadow border p-4">
      <h2 class="text-lg font-semibold mb-3">Recent Activity</h2>
      <div class="space-y-3">
        <div class="p-3 border-l-4 border-blue-500 bg-gray-50">
          <div class="font-medium">New member registration</div>
          <div class="text-sm text-gray-500">John Doe joined 5 minutes ago</div>
        </div>
        <div class="p-3 border-l-4 border-green-500 bg-gray-50">
          <div class="font-medium">Points redeemed</div>
          <div class="text-sm text-gray-500">Sarah Smith redeemed 500 points for a voucher</div>
        </div>
        <div class="p-3 border-l-4 border-yellow-500 bg-gray-50">
          <div class="font-medium">Campaign milestone</div>
          <div class="text-sm text-gray-500">"Summer Sale" reached 1000 participants</div>
        </div>
      </div>
    </div>

    <div class="bg-white rounded shadow border p-4">
      <h3 class="text-lg font-semibold mb-3">Quick Actions</h3>
      <div class="space-y-2">
        <button class="w-full text-left px-3 py-2 border rounded hover:bg-gray-50">Create Campaign</button>
        <button class="w-full text-left px-3 py-2 border rounded hover:bg-gray-50">Add Member</button>
        <button class="w-full text-left px-3 py-2 border rounded hover:bg-gray-50">View Reports</button>
        <button class="w-full text-left px-3 py-2 border rounded hover:bg-gray-50">Manage Stores</button>
      </div>
    </div>
  </div>
</div>

