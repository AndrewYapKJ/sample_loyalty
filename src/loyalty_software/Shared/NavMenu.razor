            </li>
            <li class="app-nav-item">
                <NavLink class="app-nav-link" href="/appointments" Match="NavLinkMatch.Prefix">
                    <span class="app-icon bi bi-calendar-check-fill" aria-hidden="true"></span>
                    <span class="app-label">Appointments</span>
                </NavLink>
            </li>

            <li class="app-nav-separator" aria-hidden="true"></li>
        </ul>
    </div>

    <div class="app-sidebar-footer">
        <button @onclick="Logout" class="app-logout-btn">Logout</button>
    </div>
</div>

@code {
    [Inject] private IJSRuntime JSRuntime { get; set; } = null!;
    [Inject] private NavigationManager Navigation { get; set; } = null!;

    private string NavListClass => IsCollapsed ? "app-nav-list collapsed" : "app-nav-list";

    [Parameter] public bool IsCollapsed { get; set; }

    private async Task Logout()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("localStorage.removeItem", "authToken");
            await JSRuntime.InvokeVoidAsync("localStorage.removeItem", "refreshToken");
            Navigation.NavigateTo("/", true);
        }
        catch
        {
            Navigation.NavigateTo("/", true);
        }
    }
}