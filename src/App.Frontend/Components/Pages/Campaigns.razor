@page "/campaigns"
@using gussmann_loyalty_program.Services
@using gussmann_loyalty_program.Models
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation
@inject IAuthService AuthService
@rendermode InteractiveServer

<PageTitle>Campaigns & Vouchers - Gussmann Loyalty Program</PageTitle>

@if (!isAuthenticated)
{
   <!-- Show nothing, redirect will happen -->
}
else
{
   <div class="container-fluid">
      <div class="row mb-4">
         <div class="col">
            <h1 class="display-5">
               <i class="bi bi-megaphone text-primary me-3"></i>
               Campaigns & Vouchers
            </h1>
            <p class="lead text-muted">Create and manage marketing campaigns and promotional vouchers</p>
         </div>
      </div>

      <div class="alert alert-info" role="alert">
         <i class="bi bi-info-circle me-2"></i>
         <strong>Coming Soon:</strong> Campaign and voucher management system is being developed.
      </div>

      <div class="text-center py-5">
         <i class="bi bi-megaphone text-muted" style="font-size: 4rem;"></i>
         <h3 class="mt-3 text-muted">Campaigns & Vouchers</h3>
         <p class="text-muted">This feature will allow you to:</p>
         <ul class="list-unstyled text-muted">
            <li>• Create and manage marketing campaigns</li>
            <li>• Generate promotional vouchers</li>
            <li>• Track campaign performance</li>
            <li>• Monitor voucher redemptions</li>
         </ul>
      </div>
   </div>
}

@code {
   private bool isAuthenticated = false;

   protected override async Task OnAfterRenderAsync(bool firstRender)
   {
      if (firstRender)
      {
         await CheckAuthentication();
         StateHasChanged();
      }
   }

   private async Task CheckAuthentication()
   {
      try
      {
         var token = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "jwtToken");

         if (string.IsNullOrEmpty(token))
         {
            Navigation.NavigateTo("/", true);
            return;
         }

         isAuthenticated = await AuthService.ValidateTokenAsync(token);

         if (!isAuthenticated)
         {
            Navigation.NavigateTo("/", true);
         }
      }
      catch (Exception ex)
      {
         Console.WriteLine($"Authentication error: {ex.Message}");
         Navigation.NavigateTo("/", true);
      }
   }
}